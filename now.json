{
  "version": 2,
  "name": "dockerhub-stat-tracker",
  "builds": [
    {
      "src": "api/libraries/public/*.js",
      "use": "@now/node"
    },
    {
      "src": "api/libraries/public/*.json",
      "use": "@now/static"
    }
  ],
  "routes": [
    {
      "src": "/api/libraries/manifest",
      "dest": "api/libraries/public/manifest.json",
      "methods": ["GET"],
      "headers": {
        "content-type": "application/json"
      }
    },
    {
      "src": "/api/libraries/names",
      "dest": "api/libraries/public/libraries.js",
      "methods": ["GET"],
      "headers": {
        "content-type": "application/json"
      }
    },
    {
      "src": "/api/libraries/summary",
      "dest": "api/libraries/public/summary.js",
      "methods": ["GET"],
      "headers": {
        "content-type": "application/json"
      }
    },
    {
      "src": "/api/libraries/downloads/monthly",
      "dest": "api/libraries/public/downloads.monthly.js",
      "methods": ["GET"],
      "headers": {
        "content-type": "application/json"
      }
    }
  ]
}
